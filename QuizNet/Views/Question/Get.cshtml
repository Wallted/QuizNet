@model Question
@{
    ViewData["Title"] = "Get";
}

<h1>@Model.Text</h1>
<ul class="list-group mt-4">
    @for (int i = 0; i < Model.Answers.Length; i++)
    {
        if (i == Model.CorrectAnswerIndex)
        {

            <li class="list-group-item bg-secondary text-light">@Model.Answers[i].Text</li>
        }
        else
        {
            <li class="list-group-item">@Model.Answers[i].Text</li>
        }
    }
</ul>
<div class="row mt-3">
    <div class="col-sm-10">
    </div>
    <div class="col-sm-1">
        <a class="btn btn-primary btn-block" asp-controller="Question" asp-action="Update" asp-route-id="@Model.Id.ToString()">Edit</a>
    </div>
    <div class="col-sm-1">
        <a class="btn btn-danger btn-block" asp-controller="Question" asp-action="Delete" asp-route-id="@Model.Id.ToString()">Delete</a>
    </div>
</div>
