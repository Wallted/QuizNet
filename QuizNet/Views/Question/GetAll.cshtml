@model List<Question>
@{
    ViewData["Title"] = "GetAll";
}
<h1>Questions</h1>
<br />
@foreach (var question in Model)
{
    <div class="mb-5">

        <div class="row">
            <div class="col-sm-6">
                <h3>@question.Text</h3>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-info btn-block" asp-controller="Question" asp-action="Get" asp-route-id="@question.Id.ToString()">Details</a>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-primary btn-block" asp-controller="Question" asp-action="Update" asp-route-id="@question.Id.ToString()">Edit</a>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-danger btn-block" asp-controller="Question" asp-action="Delete" asp-route-id="@question.Id.ToString()">Delete</a>
            </div>
            <br />
        </div>
        <br />

        <ul class="list-group">
            @foreach (var answer in question.Answers)
            {
                <li class="list-group-item">@answer.Text</li>
            }
        </ul>
    </div>
}


