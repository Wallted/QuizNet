@model List<QuizNet.Logic.DTOs.QuestionDto>

@{
    ViewData["Title"] = "GetAll";
}
<h1 class="mb-3">Questions</h1>

<a class="btn btn-secondary"
   asp-controller="Question"
   asp-action="Create">Add new question</a>
<a class="btn btn-secondary"
   asp-controller="Question"
   asp-action="GenerateQuiz">Generate Quiz!</a>
@foreach (var question in Model)
{
    <div class="mb-5 mt-2">

        <div class="row">
            <div class="col-sm-6">
                <h3>@question.Text</h3>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-info btn-block" asp-controller="Question" asp-action="Get" asp-route-id="@question.Id.ToString()">Details</a>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-primary btn-block" asp-controller="Question" asp-action="Edit" asp-route-id="@question.Id.ToString()">Edit</a>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-danger btn-block" asp-controller="Question" asp-action="Delete" asp-route-id="@question.Id.ToString()">Delete</a>
            </div>
            <br />
        </div>
        <br />

        <ul class="list-group">
            @foreach (var answer in question.Answers)
            {
                <li class="list-group-item">@answer.Text</li>
            }
        </ul>
    </div>
}


